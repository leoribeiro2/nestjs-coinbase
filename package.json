{
  "name": "nestjs-coinbase",
  "version": "1.2.0",
  "description": "Provides an injectable Coinbase Service",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "format": "prettier --write \"lib/**/*.ts\"",
    "publish:npm": "npm publish --access public",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:leoribeiro2/nestjs-coinbase.git"
  },
  "keywords": [
    "Coinbase",
    "NestJs",
    "Node",
    "API"
  ],
  "author": "Leonardo Guimaraes <contato@leoribeiroweb.com.br>",
  "license": "ISC",
  "dependencies": {
    "coinbase-commerce-node": "^1.0.4"
  },
  "devDependencies": {
    "@nestjs/common": "^6.11.11",
    "@nestjs/core": "^6.11.11",
    "@nestjs/testing": "^6.11.11",
    "@types/coinbase-commerce-node": "^1.0.3",
    "@types/deepmerge": "^2.2.0",
    "@types/jest": "^25.2.1",
    "jest": "^25.4.0",
    "prettier": "^1.19.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5",
    "ts-jest": "^25.4.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
